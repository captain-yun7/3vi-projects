# ======================
# Application Settings
# ======================
APP_NAME=3VI Security Scanner
APP_VERSION=1.0.0
DEBUG=False

# ======================
# Database Settings
# ======================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://secuser:secpass@localhost:5432/securitydb

# Redis connection string
REDIS_URL=redis://localhost:6379/0

# ======================
# OpenAI API Settings
# ======================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model to use
OPENAI_MODEL=gpt-4o-mini

# ======================
# Security Settings
# ======================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================
# Scanning Settings
# ======================
# Scan timeout in seconds
SCAN_TIMEOUT=300

# Maximum number of concurrent scans
MAX_CONCURRENT_SCANS=5

# Allowed target networks (comma-separated)
ALLOWED_TARGET_NETWORKS=127.0.0.1,localhost,192.168.0.0/16,10.0.0.0/8

# ======================
# Celery Settings (Phase 3+)
# ======================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ======================
# Logging Settings
# ======================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# JSON format logging (true/false)
LOG_JSON_FORMAT=false

# ======================
# Development Settings
# ======================
# Enable auto-reload on code changes
RELOAD=True

# Enable detailed SQL logging
SQL_ECHO=False
